# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# CORS Configuration
# For local development, use http://localhost:3000
# For production, use your actual frontend URL
CORS_ALLOWED_ORIGIN=http://localhost:3000

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Optional: Direct database connection for migrations
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# OpenAI Configuration
DEFAULT_LLM_PROVIDER=openai
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo
# Optional: Organization ID
OPENAI_ORG_ID=org-...

# Alternative AI Provider (Optional)
# GEMINI_API_KEY=AIzaSy...
# GEMINI_MODEL=gemini-1.5-pro

# Application Settings
LOG_LEVEL=DEBUG
NODE_ENV=development

# Feature Flags (for development)
ENABLE_EMAIL_SYNC=false
ENABLE_JOB_SCRAPER=false

# Gmail Integration (Only if implementing email features)
# Store the full JSON content as a string
# GMAIL_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}
# GMAIL_TOKEN_JSON={"access_token":"...","refresh_token":"..."}