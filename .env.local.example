# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# CORS Configuration
# For local development, use http://localhost:3000
# For production, use your actual frontend URL
CORS_ALLOWED_ORIGIN=http://localhost:3000

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Optional: Direct database connection for migrations
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# AI Configuration - Google Gemini
DEFAULT_LLM_PROVIDER=gemini
GOOGLE_AI_API_KEY=AIzaSy...
GEMINI_MODEL=gemini-1.5-flash

# Application Settings
LOG_LEVEL=DEBUG
NODE_ENV=development

# Feature Flags (for development)
ENABLE_EMAIL_SYNC=false
ENABLE_JOB_SCRAPER=false

# Gmail OAuth Integration
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-...
GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/callback

# Gmail Token Encryption
GMAIL_TOKEN_ENCRYPTION_KEY=your-32-character-encryption-key-here
GMAIL_TOKEN_ENCRYPTION_SALT=resumeforge-salt-2025

# User Configuration (for single-user personal app)
# This is the consistent user ID used throughout the application
USER_ID=personal-user-001

# User information for resume generation
USER_NAME=Your Name
USER_EMAIL=your.email@example.com
USER_PHONE=(555) 123-4567
USER_LINKEDIN=linkedin.com/in/yourprofile
USER_LOCATION=City, State