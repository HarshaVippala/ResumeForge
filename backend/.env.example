# Environment Configuration for Resume Builder

# Application Environment
ENVIRONMENT=development

# Database Configuration
# For local development with SQLite (leave DATABASE_URL empty)
# DATABASE_URL=

# For production with Supabase (replace with your actual connection string)
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_ID.supabase.co:5432/postgres

# Supabase Configuration (optional - for direct API access)
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# LM Studio Configuration
LM_STUDIO_URL=http://localhost:1234

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# CORS Configuration (for production)
# Add your Vercel domain and any custom domains
# ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com

# API Authentication (for production)
# JWT_SECRET_KEY=your-secret-key-here
# AUTH_ENABLED=false