# Environment Variables for Resume Builder

# Default LLM Provider (lmstudio, openai, gemini)
DEFAULT_LLM_PROVIDER=lmstudio

# LMStudio Configuration (for local AI)
LMSTUDIO_API_URL=http://localhost:1234

# OpenAI Configuration (for cloud AI)
# Required for OpenAI provider to be available
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini Configuration (for cloud AI)  
# Required for Gemini provider to be available
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Database Configuration
# Use either SQLite (default) or PostgreSQL
DATABASE_URL=sqlite:///./resume_builder.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/resume_builder

# Supabase Configuration (if using Supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Gmail Integration (optional)
GMAIL_CREDENTIALS_FILE=path/to/credentials.json
GMAIL_TOKEN_FILE=path/to/token.json